{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "dataFactoryNames": {
            "type": "array"
        },
        "storageAccountName": {
            "type": "string"
        },
        "workspaceName": {
            "type": "string"
        },
        "workspaceResourceGroupName": {
            "type": "string"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[parameters('storageAccountName')]",
            "apiVersion": "2019-06-01",
            "sku": {
                "name": "Standard_LRS",
                "tier": "Standard"
            },
            "kind": "StorageV2",
            "location": "[resourceGroup().location]",
            "properties": {
                "isHnsEnabled": true,
                "supportsHttpsTrafficOnly": true,
                "minimumTlsVersion": "TLS1_2",
                "allowBlobPublicAccess": false
            },
            "resources": [
                {
                    "type": "blobServices",
                    "name": "default",
                    "apiVersion": "2019-06-01",
                    "dependsOn": [
                        "[parameters('storageAccountName')]"
                    ],
                    "resources": [
                        {
                            "type": "containers",
                            "name": "container",
                            "apiVersion": "2019-06-01",
                            "properties": {
                                "publicAccess": "None"
                            },
                            "dependsOn": [
                                "default"
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "type": "Microsoft.DataFactory/factories",
            "name": "[parameters('dataFactoryNames')[copyIndex('dataFactoryCopy')]]",
            "apiVersion": "2018-06-01",
            "location": "[resourceGroup().location]",
            "identity": {
                "type": "SystemAssigned"
            },
            "properties": {
            },
            "copy": {
                "name": "dataFactoryCopy",
                "count": "[length(parameters('dataFactoryNames'))]"
            }
        },
        {
            "type": "Microsoft.DataFactory/factories/providers/diagnosticSettings",
            "name": "[concat(parameters('dataFactoryNames')[copyIndex('diagCopy')], '/Microsoft.Insights/logs')]",
            "apiVersion": "2017-05-01-preview",
            "dependsOn": [
                "[resourceId('Microsoft.DataFactory/factories', parameters('dataFactoryNames')[copyIndex('diagCopy')])]"
            ],
            "properties": {
                "workspaceId": "[resourceId(parameters('workspaceResourceGroupName'), 'Microsoft.OperationalInsights/workspaces', parameters('workspaceName'))]",
                "logAnalyticsDestinationType": "Dedicated",
                "logs": [
                    {
                        "category": "PipelineRuns",
                        "enabled": true
                    },
                    {
                        "category": "TriggerRuns",
                        "enabled": true
                    },
                    {
                        "category": "ActivityRuns",
                        "enabled": true
                    }
                ],
                "metrics": [
                    {
                        "category": "AllMetrics",
                        "enabled": true
                    }
                ]
            },
            "copy": {
                "name": "diagCopy",
                "count": "[length(parameters('dataFactoryNames'))]"
            }
        }
    ]
}
